{
    "name": "jiumu",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "web:dev": "pnpm run -C packages/web dev",
        "web:test": "pnpm run -C packages/web test",
        "web:build": "pnpm run -C packages/web build",
        "web:preview": "pnpm run -C packages/web preview",
        "pc:dev": "pnpm run -C packages/pc dev",
        "pc:test": "pnpm run -C packages/pc test",
        "pc:build": "pnpm run -C packages/pc build",
        "pc:preview": "pnpm run -C packages/pc preview",
        "mobile:dev": "pnpm run -C packages/mobile dev",
        "mobile:test": "pnpm run -C packages/mobile test",
        "mobile:build": "pnpm run -C packages/mobile build",
        "mobile:preview": "pnpm run -C packages/mobile preview",
        "lint": "eslint packages --ext .vue,.js,.ts,.jsx,.tsx --ignore-path .eslintignore --fix",
        "lint-staged": "lint-staged",
        "prepare": "husky install"
    },
    "dependencies": {
        "@jiumu/utils": "workspace:^1.0.0",
        "crypto-js": "^4.1.1",
        "lodash-es": "^4.17.21",
        "pinia": "^2.0.14",
        "vue": "^3.2.37"
    },
    "devDependencies": {
        "@commitlint/cli": "16.2.3",
        "@commitlint/config-conventional": "16.2.1",
        "@types/crypto-js": "^4.1.1",
        "@types/lodash-es": "^4.17.6",
        "@typescript-eslint/eslint-plugin": "^5.30.0",
        "@typescript-eslint/parser": "^5.30.0",
        "@vitejs/plugin-vue": "^2.3.3",
        "@vitejs/plugin-vue-jsx": "^1.3.10",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^8.18.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-define-config": "^1.5.1",
        "eslint-plugin-jsonc": "^2.3.0",
        "eslint-plugin-markdown": "^2.2.1",
        "eslint-plugin-prettier": "^4.1.0",
        "eslint-plugin-vue": "^9.1.1",
        "husky": "7.0.4",
        "jsonc-eslint-parser": "^2.1.0",
        "lint-staged": "12.3.8",
        "prettier": "2.6.2",
        "typescript": "^4.7.4",
        "unplugin-vue-define-options": "^0.6.1",
        "vite": "^2.9.9",
        "vue-eslint-parser": "^9.0.3",
        "vue-tsc": "^0.38.2"
    },
    "lint-staged": {
        "packages/**/*.{vue,js,ts,jsx,tsx}": [
            "eslint  --fix",
            "prettier --write"
        ]
    },
    "keywords": [],
    "author": "",
    "license": "ISC"
}